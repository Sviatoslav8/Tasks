<Window x:Class="Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <StackPanel Margin="10,0">
        <WrapPanel>
            <StackPanel Height="200" Width="180" Margin="5,5"  >
                <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                    <StackPanel Name="flag1cont" Height="190" Width="170">
                        <StackPanel Name="flag1" Height="70" Width="130" Margin="0,40,0,0">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/image/afganistan.jpg"></ImageBrush>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Name="С1" Height="70" >
                            <RadioButton GroupName="gr1" Checked="RadioButton_Checked_4">Науру</RadioButton>
                            <RadioButton GroupName="gr1" Checked="RadioButton_Checked_4">Палау</RadioButton>
                            <RadioButton GroupName="gr1" Checked="RadioButton_Checked_3">Афганістан</RadioButton>
                            <RadioButton GroupName="gr1" Checked="RadioButton_Checked_4">Ангілья</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Height="200" Width="180" Margin="5,5"  >
                <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                    <StackPanel Name="flag2cont" Height="190" Width="170">
                        <StackPanel Name="flag2" Height="70" Width="130" Margin="0,40,0,0">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/image/uar.jpg"></ImageBrush>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Name="С2" Height="70" >
                            <RadioButton GroupName="gr2" Checked="RadioButton_Checked_3">ЮАР</RadioButton>
                            <RadioButton GroupName="gr2" Checked="RadioButton_Checked_4">Тувалу</RadioButton>
                            <RadioButton GroupName="gr2" Checked="RadioButton_Checked_4">Гренада</RadioButton>
                            <RadioButton GroupName="gr2" Checked="RadioButton_Checked_4">Бурунді</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Height="200" Width="180" Margin="5,5" >
                <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                    <StackPanel Name="flag3cont" Height="190" Width="170">
                        <StackPanel Name="flag3" Height="70" Width="130" Margin="0,40,0,0">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/image/poland.png"></ImageBrush>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Name="С3" Height="70" >
                            <RadioButton GroupName="gr3" Checked="RadioButton_Checked_4" FontSize="12">Центральноафриканська Р</RadioButton>
                            <RadioButton GroupName="gr3" Checked="RadioButton_Checked_4" >Палау</RadioButton>
                            <RadioButton GroupName="gr3" Checked="RadioButton_Checked_4">Кабо-Верде</RadioButton>
                            <RadioButton GroupName="gr3" Checked="RadioButton_Checked_3">Польща</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Height="200" Width="180" Margin="5,5"  >
                <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                    <StackPanel Name="flag4cont" Height="190" Width="170">
                        <StackPanel Name="flag4" Height="70" Width="130" Margin="0,40,0,0">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/image/Uruguay.jpg"></ImageBrush>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Name="С4" Height="70" >
                            <RadioButton GroupName="gr4" Checked="RadioButton_Checked_3" >Уругвай</RadioButton>
                            <RadioButton GroupName="gr4" Checked="RadioButton_Checked_4" >Лесото</RadioButton>
                            <RadioButton GroupName="gr4" Checked="RadioButton_Checked_4">Маврикій</RadioButton>
                            <RadioButton GroupName="gr4" Checked="RadioButton_Checked_4">Тимор-Лешті</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Height="200" Width="180" Margin="5,5"  >
                <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                    <StackPanel Name="flag5cont" Height="190" Width="170">
                        <StackPanel Name="flag5" Height="70" Width="130" Margin="0,40,0,0">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/image/canada.png"></ImageBrush>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Name="С5" Height="70" >
                            <RadioButton GroupName="gr5" Checked="RadioButton_Checked_3">Канада</RadioButton>
                            <RadioButton GroupName="gr5" Checked="RadioButton_Checked_4" >Лесотод</RadioButton>
                            <RadioButton GroupName="gr5" Checked="RadioButton_Checked_4">Маршалові Острови</RadioButton>
                            <RadioButton GroupName="gr5" Checked="RadioButton_Checked_4">Ангілья</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Height="200" Width="180" Margin="5,5"  >
                <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                    <StackPanel Name="flag6cont" Height="190" Width="170">
                        <StackPanel Name="flag6" Height="70" Width="130" Margin="0,40,0,0">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/image/USA.jpg"></ImageBrush>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Name="С6" Height="70" >
                            <RadioButton GroupName="gr6" Checked="RadioButton_Checked_4">Тимор-Лешті</RadioButton>
                            <RadioButton GroupName="gr6" Checked="RadioButton_Checked_4">Чад</RadioButton>
                            <RadioButton GroupName="gr6" Checked="RadioButton_Checked_3">США</RadioButton>
                            <RadioButton GroupName="gr6" Checked="RadioButton_Checked_4" >Сейшельські острови</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Height="200" Width="180" Margin="5,5"  >
                <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                    <StackPanel Name="flag7cont" Height="190" Width="170">
                        <StackPanel Name="flag7" Height="70" Width="130" Margin="0,40,0,0">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/image/Australia.png"></ImageBrush>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Name="С7" Height="70" >
                            <RadioButton GroupName="gr7" Checked="RadioButton_Checked_4" >Коморські острови</RadioButton>
                            <RadioButton GroupName="gr7" Checked="RadioButton_Checked_4">Палау</RadioButton>
                            <RadioButton GroupName="gr7" Checked="RadioButton_Checked_4">Бурунді</RadioButton>
                            <RadioButton GroupName="gr7" Checked="RadioButton_Checked_3">Австралія</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Height="200" Width="180" Margin="5,5"  >
                <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                    <StackPanel Name="flag8cont" Height="190" Width="170">
                        <StackPanel Name="flag8" Height="70" Width="130" Margin="0,40,0,0">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/image/latvia.jpg"></ImageBrush>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Name="С8" Height="70" >
                            <RadioButton  GroupName="gr8" Checked="RadioButton_Checked_3">Латвія</RadioButton>
                            <RadioButton  GroupName="gr8" Checked="RadioButton_Checked_4">Литва</RadioButton>
                            <RadioButton  GroupName="gr8" Checked="RadioButton_Checked_4">Естонія</RadioButton>
                            <RadioButton  GroupName="gr8" Checked="RadioButton_Checked_4">Мікронезія</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </WrapPanel >
        <WrapPanel Button.Click="WrapPanel_Click">
            <Border CornerRadius="3" Margin="10,10,0,0" BorderBrush="Black" BorderThickness="2">
                <Button Padding="4" Background="Red" Foreground="White" Name="resaltbtn" Width="180">resalt</Button>
            </Border>
        </WrapPanel>
    </StackPanel>
</Window>
