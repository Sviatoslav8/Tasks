<Window x:Class="Finally_Core.windowsingin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finally_Core"
        mc:Ignorable="d"
        Title="windowsingin" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="YellowGreen"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Height" Value="45"></Setter>
            <Setter Property="Width" Value="190"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Padding" Value="2"></Setter>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
            <Setter Property="BorderBrush" Value="LightGray"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Width" Value="170"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Yellow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0">Name:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0">Last Name:</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="2">Phone:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2">Birthday:</TextBlock>
        <TextBox x:Name="nametb" Grid.Row="0" Grid.Column="1"></TextBox>
        <TextBox x:Name="phonetb" Grid.Row="0" Grid.Column="3"></TextBox>
        <TextBox x:Name="lastnametb" Grid.Row="1" Grid.Column="1"></TextBox>
        <DatePicker x:Name="birthdaytb" Grid.Row="1" Grid.Column="3" Width="170" Height="40" Background="White"></DatePicker>
        <Button x:Name="registerbt" Click="registerbt_Click" Grid.Row="2" Grid.ColumnSpan="2">Register</Button>
        <Button x:Name="signintb" Click="signintb_Click" Grid.Row="2" Grid.Column="2" >SingIn</Button>
        <Button x:Name="adminbt" Click="adminbt_Click" Grid.Column="3" Grid.Row="2">I`m admin</Button>
    </Grid>
</Window>
