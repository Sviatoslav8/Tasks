<Window x:Class="Finally_Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finally_Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="YellowGreen"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Height" Value="35"></Setter>
            <Setter Property="Width" Value="110"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="130"></Setter>
            <Setter Property="Height" Value="40"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="AutoGenerateColumns" Value="False"></Setter>
            <Setter Property="CanUserAddRows" Value="False"></Setter>
            <Setter Property="CanUserDeleteRows" Value="False"></Setter>
            <Setter Property="IsReadOnly" Value="True"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="genreGrid" Opacity="0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Genre}" Header="Genre"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Row="0" x:Name="popularavtorGrid" Opacity="0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name_Avtor}" Header="Avtor"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Row="0" x:Name="diskGrid" Opacity="0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name_Disk}" Header="Disk"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Row="0" Name="mainGrid" Opacity="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name_Disk}" Header="Disk" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Name_Avtor}" Header="Avtor" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Name_Collective}" Header="Collective" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Number_Sound}" Header="Number_Sound" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Genre}" Header="Genre" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Issue, StringFormat=d}" Header="Issue" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Cost}" Header="Cost" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Price}" Header="Price" ></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Button x:Name="addProductBt" Click="addProductBt_Click">Add</Button>
                <Button x:Name="deletteProductBt" Click="deletteProductBt_Click">Delette</Button>
                <Button x:Name="ShowProductBt" Click="ShowProductBt_Click">Show</Button>
                <Button x:Name="EditProductBt" Click="EditProductBt_Click">Edit</Button>
                <Button x:Name="FindByNameBt" Click="FindByNameBt_Click">FindName</Button>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <Button x:Name="FindByGenre" Click="FindByGenre_Click">FindGenre</Button>
                <Button x:Name="FindByAvtor" Click="FindByAvtor_Click">FindAvtor</Button>
                <Button x:Name="Showdisk" Click="Showdisk_Click">Show disk</Button>
                <Button Name="Sell" Click="Sell_Click">Sell</Button>
                <Button Name="shownew" Click="shownew_Click">Show new</Button>
            </StackPanel>
            <StackPanel Grid.Column="4" Width="200" Grid.ColumnSpan="2">
                <Button Width="190" Name="fossale" Click="fossale_Click">Show product sale</Button>
                <Button Width="190" Name="genreday" Click="genreday_Click">Show Genre Day</Button>
                <Button Width="190" Name="genremonth" Click="genremonth_Click">Show Genre Month</Button>
                <Button Width="190" Name="genreweek" Click="genreweek_Click">Show Genre Week</Button>
                <Button Width="190" Name="genreYear" Click="genreYear_Click">Show Genre Year</Button>
            </StackPanel>
            <TextBox Grid.Column="1" Margin="2,184,2,33" Name="findnamedisktb"></TextBox>
            <TextBox Grid.Column="3" Name="findgenretb" Margin="2,0,1,217"></TextBox>
            <TextBox Grid.Column="3" Name="findavtortb" Margin="2,50,1,171"></TextBox>
        </Grid>
    </Grid>
</Window>
